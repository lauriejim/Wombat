<script type="text/javascript">
  $(document).ready(function() {
    $('.btn').click(function(e) {
      e.preventDefault();
      var project = $(this).attr('data-id');
      var coach = $(this).attr('data-coach');

      $.ajax({
        type: 'POST',
        dataType: 'json',
        url: "/user/coach",
        headers: {"X-HTTP-Method-Override": "POST"},
        data: {
          project: project,
          coach: coach
        }
      })
      .done(function(data) {
        window.location.reload();
      });

    });
  });
</script>
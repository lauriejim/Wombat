<!-- BEGIN PAGE CONTAINER-->
<div class="page-content">
  <!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
  <div id="portlet-config" class="modal hide">
    <div class="modal-header">
      <button data-dismiss="modal" class="close" type="button"></button>
      <h3>Widget Settings</h3>
    </div>
    <div class="modal-body"> Widget settings form goes here </div>
  </div>
  <div class="clearfix"></div>
  <div class="content">
  <div class="page-title">
    <h3>Start-up</h3>
  </div>
      <div class="row">
        <% for(var i=0; i<projects.length; i++) {%>

        <% var coach = false; for(var l=0; l<projects[i].coachs.length; l++) {
          if (projects[i].coachs[l].id === req.session.user.id) coach = true;
        }

        if (!coach) {%>

        <!-- BEGIN BLOG POST WITH IMAGE -->
        <div class="col-md-4">
          <div class="widget-item narrow-margin">
                  <div class="tiles purple " style="max-height:345px">
                    <div class="tiles-body">

                      <h3 class="text-white m-t-50 m-b-30 m-r-20">Project name</h3>
                      <div class="overlayer bottom-right fullwidth">
                        <div class="overlayer-wrapper">
                        </div>
                      </div>
                      <br>
                    </div>
                  </div>
                  <div class="tiles white ">
                    <div class="tiles-body">
                      <div class="row">
                        <div class="user-comment-wrapper pull-left">
                          <div class="profile-wrapper">
              <img src="images/profiles/d2x.jpg" alt="" data-src="images/profiles/d.jpg" data-src-retina="images/profiles/d2x.jpg" width="35" height="35">
              </div>
                          <div class="comment">
                            <div class="user-name text-black bold"><%= projects[i].manager.firstname %> <span class="semi-bold"><%= projects[i].manager.lastname %></span> </div>
                            <div class="preview-wrapper">@ <%= projects[i].manager.firstname %><%= projects[i].manager.lastname %> </div>
                          </div>
                          <div class="clearfix"></div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="p-l-15 p-t-10 p-r-20">
                          <div class="post p-t-10 p-b-10">
                            <p class="p-b-10"><%= projects[i].pitch %></p>
                            <% for(var j=0; j<projects[i].needs.length; j++) {%>
                            <a href="#" class="hashtags m-b-5"> #<%= projects[i].needs[j].type %> </a>
                            <% } %>
                            </div>
                            <% var help = false; for(var k=0; k<projects[i].demande.length; k++) {
                              if (projects[i].demande[k].id === req.session.user.id) help = true;
                            } %>
                            <button type="button" class="btn <% if (help) { %>btn-success<% } else { %>btn-info<% } %> btn-cons" data-id="<%= projects[i].id %>"><% if (help) { %>Thx to help this team<% } else { %>Help this team<% } %></button>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                </div>
        <!-- BEGIN BLOG POST WITH IMAGE -->
          <%}%>
        <% } %>
      </div>
  </div>
</div>
<!-- END PAGE CONTAINER-->

<script type="text/javascript">
  $(document).ready(function() {
    $('.btn').click(function(e) {
      e.preventDefault();
      var project = $(this).attr('data-id');
      $(this).toggleClass("btn-info");
      $(this).toggleClass("btn-success");

      if ($(this).html() === "Help this team") {
        $(this).html("Thx to help this team");

        $.ajax({
          type: 'POST',
          dataType: 'json',
          url: "/user/demande",
          headers: {"X-HTTP-Method-Override": "POST"},
          data: {
            project: project
          }
        });
      } else {
        $(this).html("Help this team");

        $.ajax({
          type: 'POST',
          dataType: 'json',
          url: "/user/demande/delete",
          headers: {"X-HTTP-Method-Override": "POST"},
          data: {
            project: project
          }
        });
      }
    });
  });
</script>